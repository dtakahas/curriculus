<h1>My Articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><b><%= bookmark.name %></b></td>
        <td><%= link_to "#{bookmark.link}", bookmark.link, target: "_blank" %></td>
        <td width="15%">
          <%= link_to "<span class='glyphicon glyphicon-search'></span>".html_safe, bookmark, class: 'btn btn-primary' %>
          <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_bookmark_path(bookmark), class: 'btn btn-primary' %>
          <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, bookmark, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_bookmark_path, class: "btn btn-success" %>

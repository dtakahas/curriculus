<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group" style="margin-top:5px;margin-bottom:5px">
    <span class="input-group-addon" style="padding-right:40px">Email</span>
    <%= f.email_field :email, class: "form-control", autofocus: true, style: "width:40%" %>
  </div>

  <div class="input-group" style="margin-top:5px;margin-bottom:5px">
    <span class="input-group-addon">Password</span>
    <%= f.password_field :password, class: "form-control", autocomplete: "off", style: "width:40%" %>
  </div>

  <div class="input-group" style="margin-top:5px;margin-bottom:5px">
    <span class="input-group-addon" style="padding-right:25px">Confirm</span>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", style: "width:40%" %>
  </div>

  <div><%= f.submit "Sign up", class: "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>

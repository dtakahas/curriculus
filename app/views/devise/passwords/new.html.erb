<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group" style="margin-top:5px;margin-bottom:5px">
    <span class="input-group-addon" style="padding-right:40px">Email</span>
    <%= f.email_field :email, class: "form-control", autofocus: true, style: "width:40%" %>
  </div>

  <div><%= f.submit "Send me reset password instructions", class: "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>

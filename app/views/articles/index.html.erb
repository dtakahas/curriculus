<h1>My Articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Link</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><b><%= article.name %></b></td>
        <td><%= link_to "#{article.link}", article.link, target: "_blank" %></td>
        <td width="15%">
          <%= link_to "<span class='glyphicon glyphicon-search'></span>".html_safe, article, class: 'btn btn-primary' %>
          <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_article_path(article), class: 'btn btn-primary' %>
          <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, article, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: "btn btn-success" %>
